if [ "$ARCH" = "x86_64" ] || [ "$ARCH" = "znver1" ] || [ "$ARCH" = "i686" ]; then
	chroot $OURDIR/$ROOTDIR /sbin/dracut --xz -f /boot/initrd-${KERNELVERSION}.img ${KERNELVERSION}
else
	# Loading Intel or AMD microcode doesn't seem to be useful on
	# ARM, RISC-V or PPC...
	chroot $OURDIR/$ROOTDIR /sbin/dracut --gzip --no-early-microcode -f /boot/initrd-${KERNELVERSION}.img ${KERNELVERSION}
fi
