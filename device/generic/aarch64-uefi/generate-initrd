if echo $PACKAGESETS |grep -q gui; then
	chroot $OURDIR/$ROOTDIR /usr/sbin/dracut --zstd -o ifcfg -o lvm -o mdraid -o aufs-mount -o network -o cifs -o dm -o crypt -o dmraid -o multipath -o multipath-hostonly --fstab --add-fstab /etc/fstab -f /boot/initrd-${KERNELVERSION}.img ${KERNELVERSION}
else
	chroot $OURDIR/$ROOTDIR /usr/sbin/dracut --zstd -o ifcfg -o lvm -o mdraid -o aufs-mount -o network -o cifs -o dm -o crypt -o dmraid -o multipath -o multipath-hostonly -o drm -o simpledrm -o plymouth --fstab --add-fstab /etc/fstab -f /boot/initrd-${KERNELVERSION}.img ${KERNELVERSION}
fi
chmod 0644 $OURDIR/$ROOTDIR/boot/initrd-${KERNELVERSION}.img
