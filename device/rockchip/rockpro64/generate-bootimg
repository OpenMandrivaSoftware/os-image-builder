if [ "$USE_SYSTEMD_UEFI" = 'yes' ]; then
    cd $OURDIR/$ROOTDIR/efi
	tar cJf $OURDIR/boot-${SHORTTARGET}.tar.xz *
    cd ..
else
    cp "$OURDIR/$ROOTDIR"/usr/share/uboot/rockpro64-rk3399/idbloader.img "$OURDIR/$ROOTDIR"/boot/
    cp "$OURDIR/$ROOTDIR"/usr/share/uboot/rockpro64-rk3399/u-boot.itb "$OURDIR/$ROOTDIR"/boot/
fi
