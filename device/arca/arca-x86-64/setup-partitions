IMAGE=${OURDIR}/${RESULTDIR}/${BASENAME}.img
dd if=/dev/zero of=${IMAGE} bs=1M count=15000

PARTITIONS=("34:2047:ef02:::BIOSBOOT:1")
PARTITIONS+=(":+512M:ef00:vfat:/boot/efi:UEFIBOOT")
PARTITIONS+=(":+2G:8200")
PARTITIONS+=(":+10G:8304:${FSTYPE}:/:/")
# /srv is always on btrfs so we can
# "btrfs add" additional storage
PARTITIONS+=("::8300:btrfs:/srv:/srv")
