sed -i -e '/^add_drivers/d' $OURDIR/$ROOTDIR/etc/dracut.conf.d/50-dracut-distro.conf
sed -i -e 's,zstd,gzip,g' $OURDIR/$ROOTDIR/etc/dracut.conf.d/50-dracut-distro.conf
chroot $OURDIR/$ROOTDIR /sbin/dracut --gzip -o ifcfg -o lvm -o mdraid -o aufs-mount -o network -o cifs -o dm -o crypt -o dmraid -o multipath -o multipath-hostonly --no-early-microcode -f /boot/initrd-${KERNELVERSION}.img ${KERNELVERSION}
chmod 0644 $OURDIR/$ROOTDIR/boot/initrd-${KERNELVERSION}.img
cp $OURDIR/kernel/arch/arm64/boot/Image $OURDIR/$ROOTDIR/boot/Image-${KERNELVERSION}.img
ln -s Image-${KERNELVERSION}.img $OURDIR/$ROOTDIR/boot/Image
ln -s initrd-${KERNELVERSION}.img $OURDIR/$ROOTDIR/boot/initrd.img
$OURDIR/u-boot/tools/mkimage -A arm64 -O linux -T script -d $OURDIR/device/${TARGET}/boot.script $OURDIR/$ROOTDIR/boot/boot.scr
